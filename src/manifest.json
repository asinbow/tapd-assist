{
  "name": "TAPD助手",
  "manifest_version": 2,
  "description": "TAPD助手",
  "version": "0.1.28",
  "background": {
    "scripts":[
      "jquery.js",
      "background.js"
    ]
  },
  "icons":{
    "16": "image/main_icon_16.png",             
    "48": "image/main_icon_48.png",
    "128": "image/main_icon_128.png"                    
  },
  "browser_action": {
    "default_icon": {
      "16": "image/main_icon_off_16.png",
      "24": "image/main_icon_off_24.png",
      "32": "image/main_icon_off_32.png"
    },
    "default_title": "TAPD助手",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "http://*.tapd.cn/",
    "https://*.tapd.cn/"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.tapd.cn/*",
        "https://*.tapd.cn/*"
      ],
      "css": [
        "content_script.css"
      ],
      "js": [
        "jquery.js",
        "utils.js",
        "tapdOptions.js",
        "content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "utils.js",
    "tapdOptions.js",
    "page_inject.js"
  ]
}
